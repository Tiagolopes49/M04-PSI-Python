#7
cores_quentes=["amarelo","vermelho","laranja"]
cores_frias=["violeta","azul","verde"]
cores_quentes.extend(cores_frias)
print(cores_quentes)

#8
cores_quentes=["amarelo","vermelho","laranja"]
novas_lista_cores=[]
for i in cores_quentes:
    if "a" in i:
        novas_lista_cores.append(i)
print(novas_lista_cores)