#1 e #2
cidades = []
for i in range(3):
    cidade = input(f"Insira a cidade {i + 1}: ")
    cidades.append(cidade)
cidades.sort()
print(len(cidades))
print(cidades)
print(cidades[1])

#3
cidades = []
for i in range(7):
    cidade = input(f"Insira a cidade {i + 1}: ")
    cidades.append(cidade)
cidades.sort()
print(len(cidades))
print(cidades)
print(cidades[2:5])

#4
cidades = []
for i in range(7):
    cidade = input(f"Insira a cidade {i + 1}: ")
    cidades.append(cidade)
cidades.sort()
print(len(cidades))
print(cidades)
if "Viseu" in cidades:
    print("está na lista")
else:
    print("Não está")

